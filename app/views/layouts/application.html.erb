<!DOCTYPE html>
<html>
  <head>
    <title>FirstApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  <div class="header-logo">
    <%= link_to("Top","/") %>
  </div>
  <ul class="header-info">
    <li>
      <%= link_to("About","/about") %>
    </li>
    <li>
      <%= link_to("List", "/posts/index") %>
    </li>
    <li>
      <%= link_to("Create", "/posts/new") %>
    </li>
  </ul>
</header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
